{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./", // Set rootDir to the project root
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./", // Adjust baseUrl for imports
    "paths": {
      "*": ["*"] // Allow relative imports from the project root
    }
  },
  "include": [
    "src/**/*", // Include all TypeScript files in src
    "app.ts"    // Explicitly include app.ts
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
